[user]
  name = YuuShigetani
  email = s2g4t1n2@gmail.com
[color]
  # color縺ｮ險ｭ螳・莉･荳九・繧ｳ繝槭Φ繝峨・閾ｪ蜍輔〒濶ｲ縺､縺代ｋ)
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
[push]
  default = tracking       # default縺ｮpush蜈医・tracking縺励※縺・ｋ繝ｪ繝昴ず繝医Μ
[core]
  excludesfile = ~/.gitignore  # global縺ｪ.gitignore縺ｮ謖・ｮ・  autocrlf = input                 # CRLF繧定・蜍募､画鋤
  editor = vim
  quotepath = false
[merge]
  tool = vimdiff
[alias]
  s   = status
  st  = status
  ss  = status -s
  sh  = show
  so  = remote show origin
  # pull/push/fetch
  ft  = fetch
  ftp = fetch --prune
  up  = pull --rebase       # pull rebase
  po  = push origin         # push origin
  pof = push -f origin      # force
  pu  = push -u origin      # push origin and set upstream
  # rebase
  rbm = rebase master       # master縺ｸ縺ｮrebase縺ｯ繧医￥菴ｿ縺・・縺ｧalias
  rbd = rebase develop
  rbc = rebase --continue
  rba = rebase --abort
  rbi = rebase -i
  rbi1 = rebase -i HEAD^
  rbi2 = rebase -i HEAD^^
  rbi3 = rebase -i HEAD^^^
  rbi4 = rebase -i HEAD^^^^
  rbi5 = rebase -i HEAD^^^^^
  # merge
  mn  = merge --no-ff
  # comit
  ad  = add
  c   = commit
  ci  = commit -a           # modified縺ｪ繝輔ぃ繧､繝ｫ繧貞・縺ｦstage縺ｸ
  cam = commit -a --amend   # 逶ｴ蜑阪・commit繧剃ｿｮ豁｣
  co  = checkout
  cb  = checkout -b         # branch蛻・▲縺ｦcheckout縺吶ｋ
  ct  = checkout --track    # remote縺ｮbranch繧定ｿｽ霍｡
  cm  = checkout master
  cd  = checkout develop
  # branch髢｢騾｣
  br  = branch
  ba  = branch -a           # origin繧ょ性繧√◆蜈ｨ縺ｦ縺ｮbranch繧定｡ｨ遉ｺ
  bm  = branch --merged     # merge貂医∩縺ｮbranch繧定｡ｨ遉ｺ
  bn  = branch --no-merged  # merge縺励※縺ｪ縺・ranch繧定｡ｨ遉ｺ
  bo  = branch -r           # remote branch繧定｡ｨ遉ｺ
  # log髢｢騾｣
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
  wc  = whatchanged         # log縺ｫ螟画峩縺輔ｌ縺溘ヵ繧｡繧､繝ｫ繧ゆｸ邱偵↓蜃ｺ縺・  ls  = log --stat          # log縺ｫ螟画峩縺輔ｌ縺溘ヵ繧｡繧､繝ｫ繧ゆｸ邱偵↓蜃ｺ縺・  lp  = log -p              # diff繧ゆｸ邱偵↓蜃ｺ縺・  la  = log --pretty=\"format:%ad %h (%an): %s\" --date=short  # 縺悶▲縺上ｊ繝ｭ繧ｰ蜃ｺ縺・  lr  = log origin          # origin縺ｮlog
  ll = log --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn%x09%Creset%s' # oneline縺ｧlog繧貞・縺・  oneline = log --pretty=oneline
  ranking = shortlog -s -n --no-merges
  # log繧稚ree陦ｨ遉ｺ
  log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
  log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
  # reset
  rhs  = reset --soft HEAD
  rhs1 = reset --soft HEAD~
  rhs2 = reset --soft HEAD~~
  rhs3 = reset --soft HEAD~~~
  rhs4 = reset --soft HEAD~~~~
  rhs5 = reset --soft HEAD~~~~~
  rhh  = reset --hard HEAD       # 蜿悶ｊ霑斐＠縺ｮ縺､縺九↑縺・％縺ｨ繧偵＠縺ｦ縺励∪縺｣縺溪ｦ窶ｦ!
  rhh1 = reset --hard HEAD~
  rhh2 = reset --hard HEAD~~
  rhh3 = reset --hard HEAD~~~
  rhh4 = reset --hard HEAD~~~~
  rhh5 = reset --hard HEAD~~~~~
  # diff髢｢騾｣
  di = diff
  dm = diff master           # master縺ｨ縺ｮdiff
  dw = diff --color-words    # 蜊倩ｪ槫腰菴阪〒縺・ｍ縺､縺代※diff
  dc = diff --cached         # add縺輔ｌ縺ｦ縺・ｋ繧ゅ・縺ｨ縺ｮdiff
  ds = diff --staged         # 蜷御ｸ・1.6.1遘ｻ陦・
  d1 = diff HEAD~            # HEAD縺九ｉ1縺､蜑阪→diff
  d2 = diff HEAD~~           # HEAD縺九ｉ2縺､蜑阪→diff
  d3 = diff HEAD~~~          # HEAD縺九ｉ3縺､蜑阪→diff
  d4 = diff HEAD~~~~         # HEAD縺九ｉ4縺､蜑阪→diff
  d5 = diff HEAD~~~~~        # HEAD縺九ｉ5縺､蜑阪→diff
  d10 = diff HEAD~~~~~~~~~~  # HEAD縺九ｉ10蜑阪→diff
  # edit髢｢騾｣
  # modified or untracked縺ｪ繝輔ぃ繧､繝ｫ繧堤ｷｨ髮・☆繧・  edit = "!f() { git status -s | cut -b 4- | grep -v '\\/$' | uniq ; }; vim `f`"
  # merge縺ｮ髫帙↓conflict縺瑚ｵｷ縺阪◆繝輔ぃ繧､繝ｫ繧堤ｷｨ髮・  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
  # merge縺ｮ髫帙↓conflict縺瑚ｵｷ縺阪◆繝輔ぃ繧､繝ｫ繧誕dd
  add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
  delete-unmerged =  "!f() { git ls-files --deleted | cut -f2 | sort -u ; }; git rm `f`"
  # 謖・ｮ壹＠縺溘さ繝溘ャ繝医〒螟画峩縺輔ｌ縺溘ヵ繧｡繧､繝ｫ繧堤ｷｨ髮・☆繧・  modified = "!f() { git diff $1..$1\\^ --name-only | xargs sh -c 'vim "$@" < /dev/tty' - ;}; f"
  # grep髢｢騾｣
  gr = grep
  gn = grep -n
  sm = submodule
  smupdate = submodule foreach "git checkout master; git pull origin master"
  # stash髢｢騾｣(stash繧ゅ≧菴ｿ繧上↑縺・・縺ｧ繧ｳ繝｡繝ｳ繝医≠縺・→)
  # sl = stash list
  # sp = stash pop
  # ss = stash save

  chpk = cherry-pick # 繝√Φ繝斐け
  iss = issue # my extended command

  # git-鬚ｨ蜻る未騾｣
  ff  = flow feature
  ffl = flow feature list
  ffs = flow feature start
  fff = flow feature finish
  ffc = flow feature checkout
  fr = flow release
  fh  = flow hotfix
  fhl = flow hotfix list
  fhs = flow hotfix start
  fhf = flow hotfix finish
  fs  = flow support

[http]
  sslVerify = false

[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line
  generic = ^F move-page-down
  generic = ^B move-page-up
[github]
	user = YuuShigetani
[rebase]
	autosquash = true
[rerere]
	enabled = true
[mergetool]
	keepBackup = false
