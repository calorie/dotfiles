[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
[push]
  default = current
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = nvim
  quotepath = false
  preloadindex = true
  fscache = true
[mergetool "nvim"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[merge]
  tool = nvim
[mergetool]
  prompt = false
[alias]
  s   = status
  sh  = show
  ftp = fetch --prune
  po  = push origin
  pu  = push -u origin
  pl  = pull
  plr = pull --rebase
  rbc = rebase --continue
  rba = rebase --abort
  rbi = rebase -i
  rbi1 = rebase -i HEAD^
  rbi2 = rebase -i HEAD^^
  rbi3 = rebase -i HEAD^^^
  rbi4 = rebase -i HEAD^^^^
  rbi5 = rebase -i HEAD^^^^^
  mn  = merge --no-ff
  ad  = add
  c   = commit
  co  = checkout
  cb  = checkout -b
  cm  = checkout master
  br  = branch
  ba  = branch -a
  ls  = log --stat
  lp  = log -p
  la  = log --pretty=\"format:%ad %h (%an): %s\" --date=short
  log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
  rhh  = reset --hard HEAD
  di = diff
  dc = diff --cached
  ds = diff --staged
  gr = grep
  gn = grep -n
  sm = submodule
  # smupdate = submodule foreach "git checkout master; git pull origin master"
  st = stash
  sl = stash list
  sp = stash pop
[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line
  generic = <Ctrl-F> move-page-down
  generic = <Ctrl-B> move-page-up
[github]
  user = calorie
[rebase]
  autosquash = true
[rerere]
  enabled = true
[mergetool]
  keepBackup = false
[pull]
  rebase = false
[heroku]
  account = calorie
[hub]
  protocol = https
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[credential]
  helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
  useHttpPath = true
[gpg]
  format = ssh
[gpg "ssh"]
  program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
  gpgsign = true
