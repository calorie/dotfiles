[user]
  name = Yu Shigetani
  email = s2g4t1n2@gmail.com
  signingkey = ~/.ssh/id_ed25519.pub
[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
[push]
  default = current
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = nvim
  quotepath = false
  preloadindex = true
  fscache = true
  pager = delta
[mergetool "nvimdiff"]
  layout = "LOCAL,BASE,REMOTE / MERGED"
[merge]
  tool = nvim
  conflictStyle = zdiff3
[mergetool]
  prompt = false
[alias]
  s   = status
  sh  = show
  ftp = fetch --prune
  po  = push origin
  pu  = push -u origin
  pl  = pull
  plr = pull --rebase
  rbc = rebase --continue
  rba = rebase --abort
  rbi = rebase -i
  rbi1 = rebase -i HEAD^
  rbi2 = rebase -i HEAD^^
  rbi3 = rebase -i HEAD^^^
  rbi4 = rebase -i HEAD^^^^
  rbi5 = rebase -i HEAD^^^^^
  mn  = merge --no-ff
  ad  = add
  c   = commit
  co  = checkout
  cb  = checkout -b
  cm  = checkout master
  br  = branch
  ba  = branch -a
  ls  = log --stat
  lp  = log -p
  la  = log --pretty=\"format:%ad %h (%an): %s\" --date=short
  log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
  rhh  = reset --hard HEAD
  di = diff
  dc = diff --cached
  ds = diff --staged
  gr = grep
  gn = grep -n
  sm = submodule
  st = stash
  sl = stash list
  sp = stash pop
  sw = switch
  fs = "!f() { git fetch --prune && git switch -c \"$1\" \"origin/$2\"; }; f"
[github]
  user = calorie
[rebase]
  autosquash = true
[rerere]
  enabled = true
[mergetool]
  keepBackup = false
[pull]
  rebase = false
[heroku]
  account = calorie
[hub]
  protocol = https
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[credential]
  helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
  useHttpPath = true
[gpg]
  format = ssh
[gpg "ssh"]
  program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
  gpgsign = true
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  dark = true
  syntax-theme = zenburn
  hunk-header-style = omit
  line-numbers = true
  diff-so-fancy = true
