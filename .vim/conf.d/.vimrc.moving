"---------------------------------------------------------------------
" Move
"---------------------------------------------------------------------
" display lines moving
nnoremap j gj
nnoremap k gk

" move to start,end by 0,9
nnoremap 0 ^
" nnoremap 9 $

" moving on insert mode
inoremap <C-e> <END>
inoremap <C-a> <HOME>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-h> <Left>
inoremap <C-l> <Right>

" scroll
noremap <Space>j <C-f>
noremap <Space>k <C-b>

" move to ended cursor line
augroup CursorLine
  autocmd!
  autocmd BufReadPost * if line("'\"") > 0 && line("'\"") <= line('$') | exe 'normal g`"' | endif
augroup END

" moving on visual block mode
set virtualedit+=block

" select to line end by v9
vnoremap 9 $h
vnoremap $ $h

" move windows
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
nnoremap <C-h> <C-w>h

" tab pages
nnoremap <silent> tc :<C-u>tabnew \| :Fern . -drawer -toggle<CR>
nnoremap <silent> tx :<C-u>tabclose<CR>
nnoremap <silent> to :<C-u>tabonly<CR>
nnoremap <silent> <Space><Space> :<C-u>tabnext<CR>
nnoremap <silent> <BS><BS> :<C-u>tabprevious<CR>

"---------------------------------------------------------------------
" Tags
"---------------------------------------------------------------------
set notagbsearch
