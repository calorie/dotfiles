#!/usr/bin/env bash

while :
do
  read -p 'install dotfiles? y/n ' yn
  if [ $yn = 'n' -o $yn = 'N' ]; then
    exit
  elif [ $yn = 'y' -o $yn = 'Y' ]; then
    break
  else
    continue
  fi
done

ORIGIN=$(pwd)
DOTFILES_PATH=$HOME/dotfiles
INSTALLER_PATH=$DOTFILES_PATH/bin/installer

PKGS=(
  tmux-256color
  tmux-powerline
)
for pkg in ${PKGS[@]}
do
  $INSTALLER_PATH/$pkg-installer
done

DIRS=(
  .cache
  .config/alacritty
  .config/nvim
  .config/peco
)
for dir in ${DIRS[@]}
do
  mkdir -p $HOME/$dir
done

DOTFILES=(
  .gemrc
  .gitconfig
  .gitignore
  .inputrc
  .irbrc
  .nodenv/default-packages
  .pryrc
  .rbenv/default-gems
  .rdebugrc
  .ripgreprc
  .rspec
  .rubocop.yml
  .tmux-powerlinerc
  .tmux.conf
  .tmuxinator
  .config/alacritty/alacritty.yml
  .config/nvim/init.vim
  .config/peco/config.json
  .vimrc
  .zshrc
  .wezterm.lua
)
for file in ${DOTFILES[@]}
do
  ln -sf $DOTFILES_PATH/$file $HOME/$file
done

# dein
$INSTALLER_PATH/dein-installer

cd ${ORIGIN}
exec $SHELL
