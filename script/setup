#!/usr/bin/env bash

while :
do
  read -p 'install dotfiles? y/n ' yn
  if [ $yn = 'n' -o $yn = 'N' ]; then
    exit
  elif [ $yn = 'y' -o $yn = 'Y' ]; then
    break
  else
    continue
  fi
done

ORIGIN=$(pwd)
DOTFILES_PATH=$HOME/dotfiles
INSTALLER_PATH=$DOTFILES_PATH/bin/installer

PKGS=(
  enhancd
  tmux-256color
  tmux-thumbs
  tmux-powerline
  zsh-defer
)
for pkg in ${PKGS[@]}
do
  $INSTALLER_PATH/$pkg-installer
done

DIRS=(
  .cache
  .config/alacritty
  .config/nvim
  .config/peco
  .nodenv
  .rbenv
)
for dir in ${DIRS[@]}
do
  mkdir -p $HOME/$dir
done

DOTFILES=(
  .gemrc
  .gitconfig
  .gitignore
  .inputrc
  .irbrc
  .nodenv/default-packages
  .pryrc
  .rbenv/default-gems
  .ripgreprc
  .rspec
  .rubocop.yml
  .tmux.conf
  .config/alacritty/alacritty.toml
  .config/nvim/init.lua
  .config/nvim/lazy-lock.json
  .config/nvim/lua
  .config/peco/config.json
  .config/tmux-powerline/config.sh
  .config/tmux-powerline/themes
  .vimrc
  .zshrc
  .zshrc.local
  .wezterm.lua
)
for file in ${DOTFILES[@]}
do
  ln -sf $DOTFILES_PATH/$file $HOME/$file
done

defaults write -g KeyRepeat -int 1

cd ${ORIGIN}
exec $SHELL
